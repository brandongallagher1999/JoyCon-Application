<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_a"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:text="D"
        app:layout_constraintBottom_toTopOf="@+id/btn_s"
        app:layout_constraintStart_toStartOf="@+id/btn_s" />

    <Button
        android:id="@+id/btn_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="35dp"
        android:text="S"
        app:layout_constraintBottom_toTopOf="@+id/btn_a"
        app:layout_constraintStart_toEndOf="@+id/btn_w" />

    <Button
        android:id="@+id/btn_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="W"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_s"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="16dp" />
</android.support.constraint.ConstraintLayout>